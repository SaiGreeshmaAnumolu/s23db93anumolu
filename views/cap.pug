extends layout

block content
  h1= title
  - let items = results;
  div(class="container-fluid")
    div(class="row")
      each item,index in items
        - let destination = `dispatch(\"/cap/update?id=${item._id}\")`
        div(class="col-sm-2" class="m-1" onclick=`buy(${index})`)
          h3 #{item.brand}
          p #{item.color}
          p #{item.price}
          
          button.btn( class="btn-primary ml-1", onclick= destination) Update
  script.
   function buy(itemNo)
   {
     alert(`You purchased Item ${itemNo+1}`)
   }
    function dispatch(path){
      console.log(path);
      window.location.href=path;
    }